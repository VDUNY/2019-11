<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>

    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div><h3 class="p-2 bg-primary text-white text-center">@ViewBag.Title</h3></div>
    <div style="float:left; width: 1.5in;">
        <b>
            <a class="btn btn-primary btn-block text-white" asp-controller="Authors"    asp-action="Index">Authors</a><br />
            <a class="btn btn-primary btn-block text-white" asp-controller="Publishers" asp-action="Index">Publishers</a><br />
            <a class="btn btn-primary btn-block text-white" asp-controller="Titles"     asp-action="Index">Titles</a><br />
        </b>
    </div>
    <div style="float:left; width: 80%;" class="p-2">
        @RenderBody()
    </div>
</body>
</html>
